    <div class='sqs'>
        <div class='sq1'></div>
        <div class='sq2'></div>
        <div class='sq3'></div>
    </div>
    <div class='image col-xs-12 col-sm-5 col-md-5 col-lg-5'>
        <div>
            <img src='{{ materials }}{{ path }}'/>
        </div>
    </div>
    <div class='text col-xs-12 col-sm-7 col-md-7 col-lg-7'>
        <h1>{{ header | raw }}</h1>
        <p>{{ text | raw }}</p>
        <button class='btn btn-primary'>Заказать услугу</button>
    </div>
</div>